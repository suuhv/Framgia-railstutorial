<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= t ".name" %><%= @user.name %><br>
        <%= t ".email" %><%= @user.email %><br>
        <%= t ".activate" %><%= @user.activated? %>
      </h1>
    </section>
  </aside>
</div>
