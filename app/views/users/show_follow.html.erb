<% provide :title, @title %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to t(".my_profile"), @user %></span>
      <span><%= t ".micropost" %> <%= @user.microposts.size %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size:
              Settings.user.gravatar_size_30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <table class="table table-hover">
          <thead>
            <tr>
              <th><%= t ".avatar" %></th>
              <th><%= t ".name" %></th>
              <th><%= t ".email" %></th>
              <th><%= t ".activated" %></th>
              <% if current_user.is_admin? %>
                <th><%= t ".delete" %></th>
              <% end %>
            </tr>
          </thead>
          <%= render partial: "user", collection: @users %>
        </table>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
